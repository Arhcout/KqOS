LIBK_OBJ=$(LIB_SRC:%=$(BUILD_DIR)/%.libk.o)

LIBK_CFLAGS=$(CFLAGS) $(LIB_CK_HDR) -D__LIBK
LIBK_ASMFLAGS=$(ASMFLAGS)

