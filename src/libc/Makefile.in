LIB_SRC=$(shell find . -name '*.c')

LIBC_OBJ=$(LIB_SRC:%=$(BUILD_DIR)/%.libc.o)

LIB_CK_HDR=-Iinclude \
					 -I$(KERNEL_DIR)/include

LIBC_CFLAGS=$(CFLAGS) $(LIB_CK_HDR) -D__LIBC
